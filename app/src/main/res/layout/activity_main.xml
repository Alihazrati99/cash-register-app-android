<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/manager"
        android:text="Product Type"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        android:text="manager" />


    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="80dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/product"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/manager"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="140dp"
        android:textColor="@color/black"
        android:text="Total" />
    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/numberPicker"
        android:layout_marginTop="250dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:text="Quantity" />
    <Button
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/total"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="170dp"
        android:text="Buy" />


    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_alignTop="@+id/buy"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>